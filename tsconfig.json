{
  "compilerOptions": {
    "target": "ESNext",              // Use ESNext or higher to support import/export
    "module": "ESNext",              // Use ESNext for ES module support
    "moduleResolution": "node",      // Resolve modules like Node.js does
    "outDir": "./dist",              // Output the compiled files to the dist directory
    "rootDir": "./src",              // Input files are in the src directory
    "esModuleInterop": true,         // Allow default imports from CommonJS modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],           // Include all TypeScript files in src
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist from compilation
}
